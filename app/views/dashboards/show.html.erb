<!DOCTYPE html>
<html>
<head>
  <title><%= @dashboard.title %></title>
  <%= stylesheet_link_tag 'panic' %>
  <%= javascript_include_tag :all %>
  <%= csrf_meta_tag %>
<style type='text/css'>
#board {
	width: <%= @dashboard.width %>;
	/* uncomment to rotate for vertical layouts
	height: 100%;
	-webkit-transform: rotate(-90deg); 
	*/
}
</style>
</head>
<body>
	<div id='board'>
		<% @widgets.each do |widget| %>
		<div class='module <%= widget[:class] %>' id='<%= widget[:name] %>' 
			style='width: <%= widget[:width] %>px;
			<% if not widget[:height].nil? %>height: <%= widget[:height]%>px;<% end %>'>
		</div>
		<script type='text/javascript'>activate_module('<%= widget[:name] %>', <%= widget[:update] %>, 'width=<%= widget[:width]%>&d=<%= @dashboard.id %>');</script>
		<% end %>
	</div>
</body>
</html>

